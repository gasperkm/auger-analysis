# -------------------------------------------------------------------

# Cleaning rules ----------------------------------------------------

# Rules for cleaning the installation
clean:
	@echo "# Cleaning the installation directory -----------------------------------------"
	rm -f $(SUBSRC)/*.o
	rm -f start.sh
	rm -f $(IDIR)/workstation.h
	rm -f $(SRC)/root_mva/plotsdir.h $(SRC)/root_mva/plots/* $(SRC)/root_mva/*.d $(SRC)/root_mva/*.so
	rm -fr $(BIN)
	rm -fr $(LDIR)
